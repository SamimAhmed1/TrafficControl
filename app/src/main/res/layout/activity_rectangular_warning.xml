<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#673AB7"
    tools:context=".rectangularWarnings">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textviewrectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Yellow to be used permanent warnings sign and Orange for temporary warning sign"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/textviewrectangle"
        android:columnCount="2"
        android:rowCount="11">
        <ImageView
            android:id="@+id/singlearrow"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/singlearrow" />

        <ImageView
            android:id="@+id/doublearrow"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/doublearrow" />

        <ImageView
            android:id="@+id/yelloworange"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/yelloworange" />

        <ImageView
            android:id="@+id/nooutlet"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/nooutlet"
            />

        <ImageView
            android:id="@+id/doublelane"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/doublelane" />

        <ImageView
            android:id="@+id/mergelane"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/mergelanes" />

        <ImageView
            android:id="@+id/addedlane"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/addedlane"
            />

        <ImageView
            android:id="@+id/enteringroadway"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/enteringroadway"
            />

        <ImageView
            android:id="@+id/addedlane2"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/addedlane2"
            />

        <ImageView
            android:id="@+id/drivehighway"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/drivedhighway"
            />
        <ImageView
            android:id="@+id/drivedhighwayend"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/drivedhighwayend"
            />

        <ImageView
            android:id="@+id/twowaytraffic"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/twowaytraffic"
            />

    </GridLayout>
    </RelativeLayout>

</ScrollView>