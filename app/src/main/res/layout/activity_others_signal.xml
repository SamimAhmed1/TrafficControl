<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".othersSignal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="2"
        android:rowCount="9">

    <ImageView
        android:id="@+id/cicular"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:src="@drawable/circularintersection" />

    <ImageView
        android:id="@+id/offsetside"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:src="@drawable/offsetsside" />

    <ImageView
        android:id="@+id/offsetsideright"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:src="@drawable/offsetsideright" />

    <ImageView
        android:id="@+id/doubleside"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:src="@drawable/doubleside"
        />

    <ImageView
        android:id="@+id/stopahead"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:src="@drawable/stopahead" />

    <ImageView
        android:id="@+id/sideroad"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:src="@drawable/yeildahead" />
        <ImageView
            android:id="@+id/signalahead"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/signalahead"
            />

        <ImageView
            android:id="@+id/intersectcurve"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/intersectcurve"
            />
    </GridLayout>
    </RelativeLayout>

</ScrollView>