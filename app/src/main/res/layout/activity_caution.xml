<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="#3AB7A4"
    tools:context=".caution">


    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:text="সাধারন সতর্কতামূলক সাইনসমূহ"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:onClick="generalcautionarysigns"
        android:background="@drawable/angle_shape"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/button1"
        android:text="বিশেষ সতর্কতামুলক সাইনসমূহ"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:onClick="specialcautionarysigns"
        android:background="@drawable/angle_shape"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_marginTop="200dp"
        android:background="#B3370D"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:text="    ধীরে গাড়ি চালান,নিজে বাচুন,অপরকে বাচান   "/>
</RelativeLayout>