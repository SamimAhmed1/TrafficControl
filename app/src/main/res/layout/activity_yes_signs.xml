<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#E27E6A"
    tools:context=".YesSigns">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sudusamnecholun"/>
        <TextView
            android:id="@+id/textviewRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text="শুধুমাত্র সামনে চলুন।"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bame"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textviewGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text=" শুধুমাত্র বামদিকে চলুন।"
            android:layout_marginLeft="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sudubamdikecholun"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textviewYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:text="বামপাশ দিয়ে চলুন"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/turnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/danpashecholun"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textviewRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text="ডানপাশ দিয়ে চলুন"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/turnleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/danemor"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textviewLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:text="সামনে এগিয়ে ডানে মোড় নিন"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/turnYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bamemor"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textviewturnYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:text="সামনে এগিয়ে বামে মোড় নিন"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/red1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chotogolchokkor"/>
        <TextView
            android:id="@+id/textviewRed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text="ছোট গোলচক্কর।"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/green1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bamdandiyecholun"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textviewGreen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text="বাম অথবা ডানপাশে দিয়ে চলুন।"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ekdikechlun"/>
            <TextView
                android:id="@+id/textviewRed4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:text="একদিকে চলাচল।"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/green4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ekmukhicula"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textviewGreen4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:text="একমুখী চলার রাস্তা।"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sudurikshawcholbe"/>
            <TextView
                android:id="@+id/textviewRed5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text="শুধুমাত্র রিকশা চলাচলের রাস্তা"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/green5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/suducyclecholbe"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textviewGreen5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text=" শুধুমাত্র বামদিকে চলুন।"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:layout_marginTop="50dp"
            android:background="#B3370D"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:text="  চলন্ত গাড়তে মাথা,হাত ইত্যাদি বের করা থেকে বিরত থাকুন  "/>
    </LinearLayout>

</ScrollView>