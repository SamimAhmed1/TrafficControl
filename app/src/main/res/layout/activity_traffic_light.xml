<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#B3BBB3"
    tools:context=".trafficLight">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="arrowButton"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="থামুন"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#E20B0B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/textviewRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text="Red means stop. Wait behind the stop line."
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="চলুন"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#1E812B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/textviewGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text=" Green means proceed through the intersection carefully."
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/green"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yellow"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="এলার্ট"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#E2CC0E"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/textviewYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:text="Yellow means stop. You can enter the intersection if you are so close that sudden breaking might"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/turnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/turn_right"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ডান বাঁক "
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#35B127"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/textviewRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text="You must not go straight ahead or turn left. You may turn right."
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/turnRight"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/turnleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/turn_left"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="বাম বাঁক"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#E20B0B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/textviewLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:text="You must not turn right but you can go straight ahead or turn left if the way is clear."
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/turnleft"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/turnYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/turn_yellow"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="আস্তে চলুন"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#CEBB2D"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/textviewturnYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:text="When the yellow arrow is flashing, you may proceed but you must give way to any pedestrian who is crossing the road into which you are turning."
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/turnYellow"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>