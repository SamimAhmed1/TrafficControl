<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1DC7C7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:text="Traffic Light"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:onClick="trafficLight"
            android:background="@drawable/angle_shape"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button1"
            android:text="Police Signal"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:onClick="policeSignal"
            android:background="@drawable/angle_shape_police"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button2"
            android:text="Caution"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:onClick="caution"
            android:textColor="#FFFFFF"
            android:background="@drawable/angle_caution"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button3"
            android:text="Limit"
            android:onClick="limit"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/angle_limit"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button4"
            android:text="Others Signals"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:onClick="othersSignal"
            android:textColor="#FFFFFF"
            android:background="@drawable/angle_others"/>
    </LinearLayout>

</ScrollView>